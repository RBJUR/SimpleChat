<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10sp">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@drawable/ripples"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2sp"
        app:cardElevation="5sp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/message_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Roque Buarque Jr" />

            <TextView
                android:id="@+id/message_emoji"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/message_author"
                android:layout_toEndOf="@id/message_author" />

            <TextView
                android:id="@+id/message_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message_author"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="My message is here" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>